[difftool "bc4"]
	cmd = \"c:/Program Files/Beyond Compare 4/BCompare.exe\" \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = bc4
[difftool]
	prompt = false
[mergetool "bc4"]
	cmd = \"c:/Program Files/Beyond Compare 4/BCompare.exe\" \"$LOCAL\" \"$REMOTE\"
[mergetool "code"]
	cmd = code --wait \"$MERGED\"
[merge]
	tool = code
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold
	unmerged = magenta bold
[color "branch"]
	current = green
	remote = red bold
[alias]
	branch-name = rev-parse --abbrev-ref HEAD
	a = add
	aa = add --all
	ai = add -i
	br = branch
	branch-diff = diff main...HEAD
	cm = commit
	ca = commit -a
	cam = commit -a -m
	cal = !git add -A && git commi
	cne = commit --no-edit
	amend = commit --amend
	amend-all = !git add --all && git commit --amend --reuse-message=HEAD
	co = checkout
	cb = checkout -b
	cp = cherry-pick
	d = difftool
	dd = difftool --dir-diff
	ddm = difftool --dir-diff origin/main
	dd21 = difftool --dir-diff origin/releases/21.x
	ddc = !powershell -Command \\& { param\\(\\$commitId\\) git difftool --dir-diff \\$commitId^ \\$commitId }
    go = checkout 
	mt = mergetool
	up = pull
	pom = pull origin main
	plum = pull upstream main
	preb = !git fetch upstream && git rebase upstream/main
	pu = push
	puom = push origin main
	puoh = push origin head
	st = stash
	sl = stash list
	sp = stash pop
	sa = stash apply
	s = status
	ss = status -sb
	hist = log --graph --pretty=custom
	l = log --pretty=custom
	ll = log --stat --abbrev-commit
	lc = shortlog --summary --numbered
	unstage = reset HEAD --
	undo = reset --soft HEAD~1
	reset = reset --hard HEAD~1
	r = remote -v
	bl = blame --date=short